{{!
    @template block_chatbot/chatbot
 
    Template for the chatbot interface.
}}
 
<div id="chatbot-container">
    <button id="chatbot-toggle-btn" aria-label="{{chattoggle}}" style="background-color: {{buttoncolor}}">
        <img src="{{wwwroot}}/blocks/chatbot/images/bot_img.jpg" alt="Chat Bot" width="40" height="40">
    </button>
 
    <div id="chatbot-window" class="chatbot-hidden">
        <div class="chatbot-header" style="background-color: {{headercolor}}">
            <div class="chatbot-title">{{chatbot}}</div>
            <button id="chatbot-close-btn" aria-label="{{chatclose}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="chatbot-body">
            <div id="chatbot-messages"></div>
            <div id="chatbot-input-area">
                <textarea id="chatbot-message-input" placeholder="{{writeamessage}}" rows="1"></textarea>
                <button id="chatbot-send-button">
                    <img src="{{wwwroot}}/blocks/chatbot/images/send.png" alt="Send" width="24" height="24">
                </button>
            </div>
        </div>
    </div>
</div>